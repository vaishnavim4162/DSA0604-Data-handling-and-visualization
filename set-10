survey_data <- data.frame(
  SurveyID = c(1, 2, 3),
  Question1 = c("A", "B", "C"),
  Question2 = c("B", "A", "A"),
  Question3 = c("C", "D", "B")
)

# Q1: Grouped bar chart - Question 1 responses
q1_freq <- as.data.frame(table(survey_data$Question1))
colnames(q1_freq) <- c("Answer", "Count")

ggplot(q1_freq, aes(x = Answer, y = Count, fill = Answer)) +
  geom_bar(stat = "identity") +
  labs(title = "Distribution of Responses for Question 1",
       x = "Answer",
       y = "Count") +
  theme_minimal()

# Q2: Stacked bar chart - All question responses
survey_long <- melt(survey_data, id.vars = "SurveyID", variable.name = "Question", value.name = "Answer")
response_freq <- as.data.frame(table(survey_long$Question, survey_long$Answer))
colnames(response_freq) <- c("Question", "Answer", "Count")

ggplot(response_freq, aes(x = Question, y = Count, fill = Answer)) +
  geom_bar(stat = "identity") +
  labs(title = "Stacked Bar Chart of All Question Responses",
       x = "Question",
       y = "Count") +
  theme_minimal()

# Q3: Table - Survey responses
kable(survey_data,
      col.names = c("Survey ID", "Question 1", "Question 2", "Question 3"),
      caption = "Table: Survey Response Data")
