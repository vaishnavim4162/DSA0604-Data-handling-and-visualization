# Install and load necessary libraries
if(!require(ggplot2)) install.packages("ggplot2")
if(!require(dplyr)) install.packages("dplyr")

library(ggplot2)
library(dplyr)

# Step 1: Create the dataset
employee_data <- data.frame(
  EmployeeID = c(1, 2, 3, 4, 5),
  Department = c("Sales", "HR", "Marketing", "Sales", "HR"),
  YearsOfService = c(5, 3, 7, 4, 2),
  PerformanceScore = c(85, 92, 78, 90, 76)
)

# View data
print(employee_data)

# 1. Line Chart - Performance trend over time (by Employee ID)
line_chart <- ggplot(employee_data, aes(x = YearsOfService, y = PerformanceScore, group = 1)) +
  geom_line(color = "blue", size = 1) +
  geom_point(color = "darkblue", size = 3) +
  labs(title = "Employee Performance Trend Over Time",
       x = "Years of Service",
       y = "Performance Score") +
  theme_minimal()
print(line_chart)

# 2. Bar Chart - Distribution of employees across departments
bar_chart <- ggplot(employee_data, aes(x = Department)) +
  geom_bar(fill = "skyblue", color = "black") +
  labs(title = "Distribution of Employees by Department",
       x = "Department",
       y = "Number of Employees") +
  theme_minimal()
print(bar_chart)

# 3. Scatter Plot - Correlation between Years of Service and Performance Score
scatter_plot <- ggplot(employee_data, aes(x = YearsOfService, y = PerformanceScore)) +
  geom_point(color = "darkgreen", size = 3) +
  geom_smooth(method = "lm", se = FALSE, color = "red") +
  labs(title = "Correlation between Years of Service and Performance Score",
       x = "Years of Service",
       y = "Performance Score") +
  theme_minimal()
print(scatter_plot)

# 4. Export dataset for Tableau dashboard
write.csv(employee_data, "employee_performance.csv", row.names = FALSE)
